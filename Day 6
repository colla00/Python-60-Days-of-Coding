def count_occurrences(string, char):
    count = 0
    for c in string:
        if c == char:
            count += 1
    return count

# Example usage
user_input = input("Enter a string: ")
character_to_count = input("Enter the character to count: ")

result = count_occurrences(user_input, character_to_count)
print(f"The character '{character_to_count}' occurs {result} times in the given string.")

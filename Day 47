import math

def main():
    # Input for the number
    number = float(input("Enter a number to find its square root: "))
    square_root = math.sqrt(number)
    print(f"The square root of {number} is {square_root}")

    # Input for the angle in degrees
    angle_degrees = float(input("Enter an angle in degrees to find its sine: "))
    angle_radians = math.radians(angle_degrees)
    sine_value = math.sin(angle_radians)
    print(f"The sine of {angle_degrees} degrees is {sine_value}")

    # Using math.pi to get the value of pi
    print(f"The value of pi is {math.pi}")

    # Input for a floating-point number
    float_number = float(input("Enter a floating-point number to find its floor value: "))
    floor_value = math.floor(float_number)
    print(f"The floor value of {float_number} is {floor_value}")

if __name__ == "__main__":
    main()

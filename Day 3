def count_vowels(input_string):
    vowels = "aeiouAEIOU"
    vowel_count = 0

    for char in input_string:
        if char in vowels:
            vowel_count += 1

    return vowel_count

# Take user input
user_input = input("Enter a word: ")
result = count_vowels(user_input)
print(f"The number of vowels in '{user_input}' is: {result}")
